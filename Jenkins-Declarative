pipeline{
      agent any 
      tools {
           maven "maven3.9.5"
}

stages{
      stage('scmclone'){
          steps{
              sh "echo 'this is declarative pipeline'"
              git credentialsId: 'PAT', url: 'https://github.com/isaac-liontech/liontech-online-library-web-app.git'

} 
     
}
      stage('build+test'){
          steps{
              sh "mvn clean package"
}

} 

      stage('sonarqube'){
          steps{
             sh "mvn sonar:sonar"
}

}


 
}































}




































































































































































